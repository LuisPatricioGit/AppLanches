<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLanches.Pages.RegisterPage"
             Title="RegisterPage"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*"
          RowSpacing="20"
          Margin="20,150,20,40">

        <Image Grid.Row="0"
               Source="lanchesico.png"
               Aspect="AspectFit"
               HeightRequest="100"
               WidthRequest="100" />
        <Label Grid.Row="1"
               Text="Os Lanches do Arraial"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Frame Grid.Row="2"
               Padding="15"
               BackgroundColor="White">
            <VerticalStackLayout>
                <Entry Placeholder="Nome"
                       x:Name="EntName" />

                <Entry Placeholder="Email"
                       Keyboard="Email"
                       x:Name="EntEmail" />

                <Entry Placeholder="Telefone"
                       Keyboard="Telephone"
                       x:Name="EntPhone" />

                <Entry Placeholder="Password"
                       IsPassword="True"
                       x:Name="EntPassword" />
            </VerticalStackLayout>
        </Frame>

        <Button Grid.Row="3"
                Text="Registar"
                FontSize="Medium"
                BackgroundColor="#c9822a"
                x:Name="BtnSignup" 
                Clicked="BtnSignup_ClickedAsync"/>

        <HorizontalStackLayout Grid.Row="4"
                               Spacing="2" HorizontalOptions="Center"                      
                               VerticalOptions="EndAndExpand">
            <Label Text="JÃ¡ possui uma conta ?" />
            <Label Text=" Entre aqui" TextColor="#c9822a" FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapLogin" Tapped="TapLogin_TappedAsync"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>